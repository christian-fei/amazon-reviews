#!/bin/bash

source flags

echo "LAMBDA_NAME: $LAMBDA_NAME"
echo "ROLE_ARN: $ROLE_ARN"
echo "REGION: $REGION"

aws lambda create-function \
  --region $REGION \
  --function-name $LAMBDA_NAME \
  --runtime nodejs8.10 \
  --timeout 120 \
  --memory 2048 \
  --region $REGION \
  --role $ROLE_ARN \
  --handler lambda.handler \
  --zip-file "fileb://lambda.zip"

aws lambda update-function-configuration \
  --region $REGION \
  --function-name $LAMBDA_NAME \
